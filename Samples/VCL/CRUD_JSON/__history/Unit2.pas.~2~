unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, uMongoQuery, uConexaoMongo, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    edtInsert: TEdit;
    Button1: TButton;
    Label1: TLabel;
    Button2: TButton;
    edtUpdate: TEdit;
    Label2: TLabel;
    edtDelete: TEdit;
    Label3: TLabel;
    Button3: TButton;
    edtFind: TEdit;
    Label4: TLabel;
    Button4: TButton;
    Memo1: TMemo;
    Label5: TLabel;
    edtBanco: TEdit;
    edtCollection: TEdit;
    Label6: TLabel;
    MongoConexao1: TMongoConexao;
    MongoQuery1: TMongoQuery;
    edtUpdateWhere: TEdit;
    Button5: TButton;
    edtCampo: TEdit;
    Label7: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button5Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
begin
  MongoConexao1.Database := edtBanco.Text;
  MongoQuery1.Collection := edtCollection.Text;
  MongoQuery1.Insert(edtInsert.Text);
end;

procedure TForm2.Button2Click(Sender: TObject);
begin
  MongoConexao1.Database := edtBanco.Text;
  MongoQuery1.Collection := edtCollection.Text;
  MongoQuery1.Update(edtUpdateWhere.Text, edtUpdate.Text);
end;

procedure TForm2.Button3Click(Sender: TObject);
begin
  MongoConexao1.Database := edtBanco.Text;
  MongoQuery1.Collection := edtCollection.Text;
  MongoQuery1.Remove(edtDelete.Text);
end;

procedure TForm2.Button4Click(Sender: TObject);
begin
  MongoConexao1.Database := edtBanco.Text;
  MongoQuery1.Collection := edtCollection.Text;
  Memo1.Lines.Clear;
  Memo1.Lines.Add(MongoQuery1.Find(edtFind.Text));
end;

procedure TForm2.Button5Click(Sender: TObject);
begin
  Memo1.Lines.Add(MongoQuery1.getCamposJsonString(MongoQuery1.Find(edtFind.Text), edtCampo.Text));
end;

end.
